﻿@using CarDealer.Models.ViewModels

@model VehicleVM

<form method="post" enctype="multipart/form-data">

    <input hidden asp-for="Vehicle.Id" />
    <input hidden asp-for="Vehicle.PictureUrl" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.Vehicle.Id == 0 ? "Create" : "Update") Vehicle</h2>
        </div>
    </div>

    <div class="border p-3 mt-4">
        <div class="mb-3">
            <label asp-for="Vehicle.ModelId" class="p-0"></label>
            <select asp-for="Vehicle.ModelId" asp-items="@Model.VehicleModelList" class="form-select">
                <option disabled selected> --- Select Model --- </option>
            </select>
            <span asp-validation-for="Vehicle.ModelId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Vehicle.Year" class="p-0"></label>
            <input asp-for="Vehicle.Year" type="text" class="form-control" />
            <span asp-validation-for="Vehicle.Year" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Vehicle.Price" class="p-0"></label>
            <input asp-for="Vehicle.Price" type="text" class="form-control" />
            <span asp-validation-for="Vehicle.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Vehicle.PictureUrl" class="p-0"></label>
            <input id ="uploadBox" name ="file" type="file" class="form-control" />
            <span asp-validation-for="Vehicle.PictureUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Vehicle.Description" class="p-0"></label>
            <textarea asp-for="Vehicle.Description" rows="3" type="text" class="form-control"> </textarea>
            <span asp-validation-for="Vehicle.Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <a asp-area="Admin" asp-controller="Vehicle" asp-action="Index" style="width:150px" class="btn btn-secondary">Return to list</a>
    </div>
</form>

@section Scripts
{
    <script src="https://cdn.tiny.cloud/1/15ppzj17t7o6klw3o2ryc501mp6jdbk1079w8wuxbsupg3u3/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>

}

